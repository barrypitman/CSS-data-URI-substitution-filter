<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Dynamic background-image data uri substitution</display-name>

    <filter>
        <filter-name>CssDataUriFilter</filter-name>
        <filter-class>bazageous.CssDataUriFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CssDataUriFilter</filter-name>
        <url-pattern>/css/styles.css</url-pattern>
    </filter-mapping>

</web-app>
